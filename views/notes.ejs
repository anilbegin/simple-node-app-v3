<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Short-Note App</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" integrity="sha384-GqVMZRt5Gn7tB9D9q7ONtcp4gtHIUEW/yG7h98J7IpE3kpi+srfFyyB/04OV6pG0" crossorigin="anonymous"></script>
</head>
<body>
  <span style="float: right; padding-right: 3px; font-style: italic;" class="text-muted">version 3.0</span> 
  
  
  <div class="container">
    <form action="/logout" method="POST">
      <span><button class="btn" style="float: right;"><i title="logout" class="fas fa-sign-out-alt" style="margin-top: 10px;color: red;"></i></button></span>
    </form>
    <h1 class="display-4 text-center py-1">Short-Note</h1>
    
    <div class="jumbotron p-3 shadow-sm">
      <form id="our-form" action="/create-item" method="POST">
        <div class="d-flex align-items-center">
          <input id="our-field" autofocus autocomplete="off" name="item" class="form-control mr-3" type="text" style="flex: 1;">
          <button class="btn btn-primary">Add New Note</button>
        </div>
      </form>
    </div>
    
    <ul id="item-list" class="list-group pb-5">
      <% itemy.map(item => { %>
        <% const date = new Date(item.date) %>
        <% 
         let theDate = date.getDate()
         let theMonth = date.getMonth() +1
         let theYear = date.getFullYear()
         let theHour = date.getHours()
         let theMinute = date.getMinutes()
         theMinute = theMinute < 10 ? '0' + theMinute : theMinute 
        %>
      <li class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
        <div>
          <span class="item-text"><%= item.text %></span>
          <div class="font-weight-light"><span class='item-date'>(<%= theDate %>/<%=  theMonth %>/<%= theYear  %>, <%= theHour %>:<%= theMinute %>)</span></div>
        </div>     
        <div>
                <button data-id=<%= item._id %> class="edit-me btn btn-secondary btn-sm mr-1">Edit</button>
                <button data-id=<%= item._id %> class="delete-me btn btn-danger btn-sm">Delete</button>
        </div>
      </li>
      <% }) %>
    </ul>
    
  </div>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script> 
  <script src="/browser.js"></script>
</body>
</html>